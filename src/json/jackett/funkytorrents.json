  "language": "en-us",
  "type": "private",
  "encoding": "UTF-8",
  "links": ["http://funkytorrents.com"],
  "caps": {
    "categories": {
      "1": "PC",
      "2": "Books",
      "3": "Movies",
      "4": "Audio",
      "5": "Audio/Video",
      "6": "Audio",
      "7": "Audio",
